<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        app:cardUseCompatPadding="true"
        android:elevation="3dp"
        card_view:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/event_imgC"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#000"
                android:padding="3dp"
                android:id="@+id/event_nameC"
                android:layout_below="@+id/event_imgC"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E6E6E6"
                android:layout_below="@+id/event_nameC"/>

<ImageView
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:src="@drawable/info_shrt1"
    android:layout_marginTop="6dp"
    android:id="@+id/dateEvent"
    android:layout_below="@+id/event_nameC"
    android:layout_alignLeft="@+id/event_nameC"
    android:layout_alignStart="@+id/event_nameC" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:padding="3dp"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="#424242"
                android:id="@+id/eventDetDate"
                android:layout_below="@+id/event_nameC"
                android:layout_alignTop="@+id/dateEvent"
                android:layout_toRightOf="@+id/dateEvent"
                android:layout_toEndOf="@+id/dateEvent" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/time2"
                android:layout_marginTop="7dp"
                android:id="@+id/timeEvent"
                android:layout_below="@+id/dateEvent"
                android:layout_alignLeft="@+id/dateEvent"
                android:layout_alignStart="@+id/dateEvent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:padding="3dp"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="#424242"
                android:id="@+id/eventDetTime"
                android:layout_below="@+id/eventDetDate"
                android:layout_alignTop="@+id/timeEvent"
                android:layout_toRightOf="@+id/timeEvent"
                android:layout_toEndOf="@+id/timeEvent" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/location_icon2_small"
                android:layout_marginTop="7dp"
                android:id="@+id/locEvent"
                android:layout_below="@+id/timeEvent"
                android:layout_alignLeft="@+id/timeEvent"
                android:layout_alignStart="@+id/timeEvent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:padding="3dp"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="#424242"
                android:id="@+id/eventDetLoc"
                android:layout_below="@+id/eventDetTime"
                android:layout_alignTop="@+id/locEvent"
                android:layout_toRightOf="@+id/locEvent"
                android:layout_toEndOf="@+id/locEvent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E6E6E6"
                android:id="@+id/line2"
                android:layout_below="@+id/eventDetLoc"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/line2"
                android:id="@+id/favouriteEventBtn"
                android:layout_margin="7dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/favourite_small_1"/>

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_below="@+id/line2"
                android:id="@+id/vline2"
                android:layout_margin="2dp"
                android:layout_toLeftOf="@+id/favouriteEventBtn"
                android:layout_toStartOf="@+id/favouriteEventBtn"
                android:background="#E6E6E6" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/shareBtn"
                android:src="@drawable/share_icon"
                android:layout_marginRight="8dp"
                android:layout_margin="7dp"
                android:layout_below="@+id/line2"
                android:layout_toLeftOf="@+id/vline2"
                android:layout_toStartOf="@+id/vline2"
                android:layout_marginEnd="8dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_below="@+id/line2"
                android:id="@+id/vline1"
                android:layout_margin="2dp"
                android:layout_toLeftOf="@+id/shareBtn"
                android:layout_toStartOf="@+id/shareBtn"
                android:background="#E6E6E6" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/likeEventBtn"
                android:src="@drawable/like_button_small1"
                android:layout_marginRight="8dp"
                android:layout_margin="5dp"
                android:layout_below="@+id/line2"
                android:layout_toLeftOf="@+id/vline1"
                android:layout_toStartOf="@+id/vline1"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/people"
                android:src="@drawable/team_grey"
                android:layout_alignBottom="@+id/interestedPeople"
                android:layout_alignLeft="@+id/locEvent"
                android:layout_alignStart="@+id/locEvent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 people interested"
                android:layout_marginLeft="10dp"
                android:id="@+id/interestedPeople"
                android:layout_alignBottom="@+id/likeEventBtn"
                android:layout_toRightOf="@+id/people"
                android:layout_toEndOf="@+id/people" />
            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:transformPivotX="75dp"
                android:transformPivotY="30dp"
                android:layout_below="@+id/interestedPeople"/>

            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vline1"
                android:layout_toLeftOf="@+id/likeEventBtn"
                android:layout_toStartOf="@+id/likeEventBtn"
                android:layout_alignBaseline="@+id/ratingBar"
                android:layout_marginRight="36dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="10dp"
                android:id="@+id/ratingValue" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>